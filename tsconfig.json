{
  "compilerOptions":{
     "module":"commonjs",
     "esModuleInterop": true,
     "moduleResolution": "node",
     "pretty": true,
     "sourceMap": true,
     "outDir": "./dist",
     "baseUrl": "./src",
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "target": "es2020",
     "typeRoots":[
        "node_modules/@types"
     ]
  },
  "include":[
     "src/**/*.ts"
  ],
  "exclude":[
     "node_modules"
  ]
}
